<div>
  <div>
    <h1>
      Show type #<%= @the_show_type.id %> details
    </h1>

    <div>
      <div>
        <a href="/show_types">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_show_type/<%= @the_show_type.id %>">
          Delete show type
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_show_type.name %>
      </dd>

      <dt>
        Shows count
      </dt>
      <dd>
        <%= @the_show_type.shows_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_show_type.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_show_type.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit show type
    </h2>

    <form action="/modify_show_type/<%= @the_show_type.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_show_type.name %>">
      </div>

      <div>
        <label for="shows_count_box">
          Shows count
        </label>

        <input type="text" id="shows_count_box" name="query_shows_count" value="<%= @the_show_type.shows_count %>">
      </div>

      <button>
        Update show type
      </button>
    </form>
  </div>
</div>

<hr>
