<div>
  <div>
    <h2>
      List of all producers
    </h2>
  </div>
</div>

<hr>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @list_of_users.each do |a_user| %>
    <div class="col">
      <div class="card h-100">
        <img src="<%= a_user.producer_profile_pic %>" class="card-img-top" style="width: 100%; height: 250px;" alt="<%= a_user.producer_name %> Image">
        <div class="card-body">
          <h5 class="card-title"><%= a_user.producer_name %></h5>
          <p class="card-text">
            <strong>Location:</strong> <%= a_user.city %>, <%= a_user.state %><br>
            <strong>Bio:</strong> <%= truncate(a_user.producer_bio, length: 100, separator: ' ', omission: '...') %><br>
          </p>
        </div>
        <hr>
        <div class="card-footer">
          <a href="/producers/<%= a_user.producer_name.gsub(' ', '_') %>" class="btn btn-primary">Show details</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
<hr>
