<div>
  <div>
    <h2>
      List of all comedians
    </h2>
  </div>
</div>

<hr>
<% if @list_of_users.count == 0 %>

<p> There is no comedian matching your search! </p>

<% else %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @list_of_users.each do |a_user| %>
    <div class="col">
      <div class="card h-100">
        <img src="<%= a_user.comedian_profile_pic %>" class="card-img-top" style="width: 100%; height: 250px;" alt="<%= a_user.comedian_name %> Image">
        <div class="card-body">
          <h5 class="card-title"><%= a_user.comedian_name %></h5>
          <p class="card-text">
            <strong>Location:</strong> <%= a_user.city %>, <%= a_user.state %><br>
            <strong>Short Bio:</strong> <%= a_user.short_comedian_bio %><br>
            <strong>Comedy Styles:</strong>
            <% a_user.comic_styles.all.each do |comic_style| %>
              <span class="badge bg-secondary"><%= comic_style.comedy_style.name %></span>
            <% end %>
          </p>
        </div>
        <hr>
        <div class="card-footer">
          <a href="/comedians/<%= a_user.comedian_name.gsub(' ', '_') %>" class="btn btn-primary">Show details</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>

<hr>
